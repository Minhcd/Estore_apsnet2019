@using Microsoft.AspNetCore.Http
@model IEnumerable<EStore.Models.SanPham>
@{
    ViewData["Title"] = "Tìm kiếm";
    Layout = "~/Views/Shared/_Frontend.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Obaju</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS-->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Google fonts - Roboto -->
    <link href="http://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100">
    <!-- owl carousel-->
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/css/owl.theme.default.css" rel="stylesheet" />
    <!-- theme stylesheet-->
    <link href="~/css/style.pink.css" rel="stylesheet" id="theme-stylesheet" />
    <link href="~/css/cart.css" rel="stylesheet" />
    <!-- Custom stylesheet - for your changes-->
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/css/dangkymoi.css" rel="stylesheet" />
    <!-- Favicon-->
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <!--
    *** FOOTER ***
    _________________________________________________________
    -->
    <div class="container baotrongoitimkiem">
        <div class="col-lg-12">
            <div class="row products">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-sm-4">
                        <div class="product" style="margin:10px 0px;">
                            <div class="flip-container">
                                <div class="flipper">
                                    <div class="front"><a href="detail.html"><img src="~/images/products/@item.Hinh" alt="" class="img-fluid"></a></div>

                                </div>
                            </div>
                            <div class="text">
                                <h3 style="text-align:center;margin:20px 0px;"><a asp-action="ChiTiet" asp-controller="SanPham" asp-route-id="@item.MaSp">@item.TenSp</a></h3>
                                <p class="price">
                                    <del>@item.GiaCu.Value.ToString("#,##0") đ </del> @item.DonGia.Value.ToString("#,##0") đ
                                </p>
                                <p class="buttons"><a asp-action="ChiTiet" asp-controller="SanPham" asp-route-id="@item.MaSp" class="btn btn-outline-secondary">Chi tiết</a><a asp-action="AddToCart" asp-controller="GioHang" asp-route-mahh="@item.MaSp" asp-route-sl="1" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a></p>
                            </div>
                            <!-- /.text-->
                        </div>
                        <!-- /.product            -->
                    </div>
                }
                <!-- /.products-->
            </div>

        </div>
    </div>
    <!-- *** COPYRIGHT END ***-->
    <!-- JavaScript files-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/owl.carousel2.thumbs.js"></script>
    <script src="~/js/front.js"></script>

</body>
</html>