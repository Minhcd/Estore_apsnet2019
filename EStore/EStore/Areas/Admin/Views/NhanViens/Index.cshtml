@model IEnumerable<EStore.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Danh sách nhân viên</h4>
    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HoTen)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td scope="row">
                    <a asp-action="Edit" asp-route-id="@item.MaNv" class="btn btn-success">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.MaNv" class="btn btn-info">Xem chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNv" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>